<%= form_with(model: logbook, class: "space-y-6") do |form| %>

  <div>
    <%= form.label "Type of Cup", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_field :cup_type, value:"Coffee", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

    <div>
    <%= form.label "Amount of Cups", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1">
      <%= form.text_field :amount, value:"1" , class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>


  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", logbooks_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= form.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>
