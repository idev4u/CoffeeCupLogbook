          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5M3.75 17.25h16.5" />
          </svg>
        </button>
      </div>

    </div>
  </div>

  <!-- Mobile-Navigation (unter der Navbar) -->
  <div id="mobile-menu" class="md:hidden hidden border-t border-gray-200">
    <div class="space-y-1 px-4 py-3">
      <%= link_to "Home", root_path, class: "block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-100" %>
    </div>
  </div>
