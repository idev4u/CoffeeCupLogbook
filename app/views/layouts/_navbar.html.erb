<nav class="bg-white border-b border-gray-200">
  <div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center">

      <!-- Logo links -->
      <div class="flex items-center gap-2">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <%= image_tag "coffee_beans.png", class: "h-8 w-auto" %>
          <span class="text-lg font-semibold tracking-tight">
            Coffee Budget
          </span>
        <% end %>
      </div>

      <!-- Desktop-Navigation rechts -->
      <div class="ml-auto hidden md:flex items-center gap-6">
        <%= link_to "Home", root_path, class: "text-sm font-medium text-gray-700 hover:text-black" %>
      </div>

      <!-- Mobile-Menü Button (Burger) -->
      <div class="flex md:hidden">
        <button 
          type="button"
          class="inline-flex items-center justify-center rounded-md p-2 text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500"
